package formatTest;

public class FormatTask02 {
	public static void main(String[] args) {
		int kor = 0, math = 0, eng = 0;
		String name = null;
		String str = null;
		
		name = "강대훈";
		kor = 88;
		math = 92;
		eng = 100;
		
		
		
		
		System.out.printf("이름: %5s\n", name);
		System.out.printf("국어: %5d점\n", kor);
		System.out.printf("수학: %5d점\n", math);
		System.out.printf("영어: %5d점\n", eng);
		System.out.println("");
		str = "이름: %5s\n";
		System.out.printf(str, name);
		str = "국어: %5d점\n";
		System.out.printf(str, kor);
		str = "수학: %5d점\n";
		System.out.printf(str, math);
		str = "영어: %5d점\n";
		System.out.printf(str, eng);
	}
}
