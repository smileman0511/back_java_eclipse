package castingTask;

public class CastingTask01 {
   public static void main(String[] args) {
//      6.37, 3.99, 3
//      3개의 값을 연산하여 3을 만들기
//      단 모두 한 번씩 사용해야한다.
	   double num1, num2 = 0;
	   int num3 = 0;
	   
	   num1 = 6.37;
	   num2 = 3.99;
	   num3 = 3;
	   
	   System.out.println((int)num1 / 2);
	   System.out.println((int)num2);
	   System.out.println(num3);
	   System.out.println(num1 + num2 + num3);
   }
}