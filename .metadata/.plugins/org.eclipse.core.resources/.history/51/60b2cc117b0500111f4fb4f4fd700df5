package formatTest;
//	%d : decimal(10진수 정수)
//	%o : octal(8진수 정수)
//	%x : hexadecimal(16진수 정수)
//	%f : float(실수)
//	%c : character(문자)
//	%s : string(문자열)
public class FormatTest {
	public static void main(String[] args) {
		
		String name = "강대훈";
		int age = 26;
		double height = 177.7;
		
		System.out.printf("이름: %s짱짱맨\n", name);
		System.out.printf("나이: %d\n", age);
		System.out.printf("키: %.1fcm", height);
		
		
		
	}
}
